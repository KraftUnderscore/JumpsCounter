<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CounterFragment">

    <Button
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_yellow"
        android:text="@string/share_button_text"
        android:textColor="@color/blue_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_box_4" />

    <ImageView
        android:id="@+id/summary_box_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_round_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_summary"
        app:tint="@color/green_yellow" />

    <ImageView
        android:id="@+id/summary_box_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_round_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_box_1"
        app:tint="@color/green_yellow" />

    <ImageView
        android:id="@+id/summary_box_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_round_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_box_2"
        app:tint="@color/green_yellow" />

    <ImageView
        android:id="@+id/summary_box_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_round_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_box_3"
        app:tint="@color/green_yellow" />

    <TextView
        android:id="@+id/summary_jumps_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textColor="@color/blue_black"
        app:layout_constraintBottom_toBottomOf="@+id/summary_box_1"
        app:layout_constraintEnd_toEndOf="@+id/summary_box_1"
        app:layout_constraintStart_toEndOf="@+id/summary_rope"
        app:layout_constraintTop_toTopOf="@+id/summary_box_1" />

    <TextView
        android:id="@+id/summary_avg_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textColor="@color/blue_black"
        app:layout_constraintBottom_toBottomOf="@+id/summary_box_3"
        app:layout_constraintEnd_toEndOf="@+id/summary_box_3"
        app:layout_constraintStart_toEndOf="@+id/summary_speed"
        app:layout_constraintTop_toTopOf="@+id/summary_box_3" />

    <TextView
        android:id="@+id/text_title_summary"
        android:layout_width="0dp"
        android:layout_height="70sp"
        android:layout_marginTop="16dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="@string/title_summary"
        android:textAlignment="center"
        android:textColor="@color/blue_black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/summary_duration_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textColor="@color/blue_black"
        app:layout_constraintBottom_toBottomOf="@+id/summary_box_2"
        app:layout_constraintEnd_toEndOf="@+id/summary_box_2"
        app:layout_constraintStart_toEndOf="@+id/summary_time"
        app:layout_constraintTop_toTopOf="@+id/summary_box_2" />

    <TextView
        android:id="@+id/summary_date_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textColor="@color/blue_black"
        app:layout_constraintBottom_toBottomOf="@+id/summary_box_4"
        app:layout_constraintEnd_toEndOf="@+id/summary_box_4"
        app:layout_constraintStart_toEndOf="@+id/summary_date"
        app:layout_constraintTop_toTopOf="@+id/summary_box_4" />

    <ImageView
        android:id="@+id/summary_rope"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_accessibility_new_24"
        app:layout_constraintBottom_toBottomOf="@+id/summary_box_1"
        app:layout_constraintEnd_toEndOf="@+id/summary_box_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/summary_box_1"
        app:layout_constraintTop_toTopOf="@+id/summary_box_1"
        app:tint="@color/blue_black" />

    <ImageView
        android:id="@+id/summary_time"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintBottom_toBottomOf="@+id/summary_box_2"
        app:layout_constraintEnd_toEndOf="@+id/summary_box_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/summary_box_2"
        app:layout_constraintTop_toTopOf="@+id/summary_box_2"
        app:tint="@color/blue_black" />

    <ImageView
        android:id="@+id/summary_speed"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_speed_24"
        app:layout_constraintBottom_toBottomOf="@+id/summary_box_3"
        app:layout_constraintEnd_toEndOf="@+id/summary_box_3"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/summary_box_3"
        app:layout_constraintTop_toTopOf="@+id/summary_box_3"
        app:tint="@color/blue_black" />

    <ImageView
        android:id="@+id/summary_date"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_date_range_24"
        app:layout_constraintBottom_toBottomOf="@+id/summary_box_4"
        app:layout_constraintEnd_toEndOf="@+id/summary_box_4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/summary_box_4"
        app:layout_constraintTop_toTopOf="@+id/summary_box_4"
        app:tint="@color/blue_black" />

</androidx.constraintlayout.widget.ConstraintLayout>